<div class="container ">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <th>#</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Fone</th>
        <th></th>
      </thead>
      <tbody>
        <% @people.each do |p|%>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.full_name %></td>
            <td><%= p.email %></td>
            <td><%= p.phone %></td>
            <td>
              <button type="button" class="btn btn-success">X</button>
              <button type="button" class="btn btn-danger">X</button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="">

      <%= paginate @people %>
    </div>

  </div>

</div>
